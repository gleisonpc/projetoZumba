<Window x:Class="projetoZumba.Views.Pagamentos.Pagamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pagamentos" Height="484" Width="699" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="DataGridPagamento" ItemsSource="{Binding}" CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,106,0,0" MouseDoubleClick="DataGridPagamento_MouseDoubleClick"/>
        <TextBox x:Name="campoBusca" HorizontalAlignment="Left" Height="22" Margin="82,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287"/>
        <TextBlock HorizontalAlignment="Left" Margin="47,55,0,0" TextWrapping="Wrap" Text="Busca: " VerticalAlignment="Top"/>
        <Button Content="Buscar" HorizontalAlignment="Left" Margin="516,49,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click" Height="24"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="595,49,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click_1" Height="24"/>
        <ComboBox x:Name="tipoBusca" HorizontalAlignment="Left" Margin="387,49,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem>Nome</ComboBoxItem>
            <ComboBoxItem>Código</ComboBoxItem>
            <ComboBoxItem >Status</ComboBoxItem>
        </ComboBox> 
    </Grid>
</Window>
